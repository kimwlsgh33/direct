<?xml version="1.0" encoding="UTF-8"?>
<!-- xml 선언 -->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--태그 규칙 선언-->

<mapper namespace="com.linker.direct.item.dao.ItemDao">
    <select id="listAll" resultType="com.linker.direct.item.vo.Item">
        <![CDATA[
            SELECT * FROM item ORDER BY id
        ]]>
    </select>

    <insert id="create" parameterType="com.linker.direct.item.vo.Item">
        <![CDATA[
            INSERT INTO item (user_id, name, price, stock, description, status, category_id)
            VALUES (#{user_id}, #{name}, #{price}, #{stock}, #{description}, #{status}, #{category_id})
        ]]>
        <!-- 쿼리문 실행 이후(order), Item 객체의 id(keyProperty)에, 새로 생성된 id(keyColumn)를 set 해준다. -->
        <selectKey keyColumn="item_id" keyProperty="item_id" order="AFTER" resultType="java.lang.Long">
            SELECT item_id FROM item WHERE item_id = LAST_INSERT_ID()
        </selectKey>
    </insert>

    <select id="read" resultType="com.linker.direct.item.vo.Item">
        <![CDATA[
            SELECT * FROM item WHERE item_id = #{item_id}
        ]]>
    </select>
</mapper>