<?xml version="1.0" encoding="UTF-8"?>
<!-- xml 선언 -->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--태그 규칙 선언-->

<mapper namespace="item">
    <select id="listAll" resultType="com.linker.direct.item.vo.ItemVO">
        <![CDATA[
            SELECT * FROM item ORDER BY id
        ]]>
    </select>

    <insert id="create" parameterType="com.linker.direct.item.vo.ItemVO">
        <![CDATA[
            INSERT INTO item (user_id, name, price, stock, description, status, category_id)
            VALUES (#{user_id}, #{name}, #{price}, #{stock}, #{description}, #{status}, #{category_id})
        ]]>
        <!-- 쿼리문 실행 이후(orderVO), Item 객체의 id(keyProperty)에, 새로 생성된 id(keyColumn)를 set 해준다. -->
        <selectKey keyColumn="item_id" keyProperty="item_id" order="AFTER" resultType="java.lang.Long">
            SELECT item_id FROM item WHERE item_id = LAST_INSERT_ID()
        </selectKey>
    </insert>

    <select id="read" resultType="com.linker.direct.item.vo.ItemVO">
        <![CDATA[
            SELECT * FROM item WHERE item_id = #{item_id}
        ]]>
    </select>

    <!-- ================================================================================================ -->
    <!-- ================================================================================================ -->
    <!-- ================================================================================================ -->
    <!-- 상품 전체 목록 가져오기 -->
    <select id="searchListAll" resultType="com.linker.direct.item.vo.ItemVO">
		<![CDATA[select * from item]]>
	</select>

    <!-- 페이징 -->
    <select id="searchListTotalCount" parameterType="com.linker.direct.common.util.Criteria" resultType="Integer">
		<![CDATA[
        SELECT	COUNT(*)
        FROM	item
        WHERE	1 = 1
        ]]>
	</select>

    <!-- 낮은 가격순 정렬 -->
    <select id="searchListPaging" parameterType="hashmap" resultType="com.linker.direct.item.vo.ItemVO">
        <![CDATA[
		select *
		from (select *, ROW_NUMBER() OVER(
		]]>
        <include refid="searchOrder" />
        <![CDATA[
		) as rNUM from item where 1 = 1
		]]>
        <include refid="searchMySQL"/>
        <![CDATA[
		) brd
		where rNum between 1+(#{perPageNum}*(#{page}-1)) and #{perPageNum} + (#{perPageNum}*(#{page}-1))
		]]>
        <include refid="searchOrder"/>
    </select>




    <sql id="searchMySQL">
        AND name LIKE CONCAT('%', #{keyword}, '%')
    </sql>



    <sql id="searchOrder">
        <if test="subFilter == 'lowPrice'">
            order by price
        </if>
        <if test="subFilter == 'highPrice'">
            order by price desc
        </if>
        <if test="subFilter == 'created_at'">
            order by created_at desc
        </if>
        <choose>
            <when test="subFilter == null">
                order by price
            </when>
        </choose>
    </sql>
</mapper>