<?xml version="1.0" encoding="UTF-8"?>
<!-- xml 선언 -->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--태그 규칙 선언-->

<mapper namespace="com.linker.direct.item.dao.ItemImgDao">


    <select id="listAll" resultType="com.linker.direct.item.vo.Item">
        <![CDATA[
            SELECT * FROM item ORDER BY id
        ]]>
    </select>

    <!--  -->
    <insert id="create" parameterType="com.linker.direct.item.vo.ItemImg">
        <![CDATA[
            INSERT INTO item_img (item_id, img_name, origin_name)
            VALUES (#{item_id}, #{img_name}, #{origin_name})
        ]]>
    </insert>


    <select id="read" resultType="com.linker.direct.item.vo.ItemImg">
        <![CDATA[
            SELECT * FROM item_img WHERE id = #{id}
        ]]>
    </select>

    <select id="update">
        <![CDATA[
            UPDATE item SET name=#{name}, price=#{price}, stockQuantity=#{stockQuantity}, description=#{description}, imageUrl=#{imageUrl}
            WHERE id=#{id}
        ]]>
    </select>
    <select id="delete">
        <![CDATA[
            DELETE FROM item WHERE id=#{id}
        ]]>
    </select>
</mapper>