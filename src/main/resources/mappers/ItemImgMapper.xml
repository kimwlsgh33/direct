<?xml version="1.0" encoding="UTF-8"?>
<!-- xml 선언 -->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--태그 규칙 선언-->

<mapper namespace="itemImg">
    <select id="listAll" resultType="com.linker.direct.item.vo.ItemImgVO">
        <![CDATA[
            SELECT * FROM item_img ORDER BY item_img
        ]]>
    </select>

    <insert id="create" parameterType="com.linker.direct.item.vo.ItemImgVO">
        <![CDATA[
            INSERT INTO item_img (item_id, img_name, origin_name)
            VALUES (#{item_id}, #{img_name}, #{origin_name})
        ]]>
    </insert>

    <select id="read" resultType="com.linker.direct.item.vo.ItemImgVO">
        <![CDATA[
            SELECT * FROM item_img WHERE id = #{id}
        ]]>
    </select>
</mapper>