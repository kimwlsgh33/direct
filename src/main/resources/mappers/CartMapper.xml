<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.linker.direct.cart">

<!--    장바구니 리스트 보여주기-->
    <select id="cartList" parameterType="hashmap" resultType="com.linker.direct.cart.dto.CartDTO">
		<![CDATA[
        SELECT	*
        from cartList
        ORDER BY cart_id DESC
        ]]>
	</select>

<!--    장바구니 리스트 추가-->
    <insert id="insertCart" parameterType="com.linker.direct.cart.dto.CartDTO">
        <![CDATA[
        insert into cartList (product_name, product_price, product_img, product_count, cart_date)
        values (#{product_name}, #{product_price}, #{product_img}, #{product_count}, #{cart_date})
        ]]>
    </insert>

<!--    장바구니 리스트 삭제-->
    <delete id="deleteCart" parameterType="com.linker.direct.cart.dto.CartDTO">
        <![CDATA[
        delete from cartList where cart_id = #{cart_id}
        ]]>
    </delete>

<!--    장바구니 리스트 전체 삭제-->
    <delete id="deleteAllCart" parameterType="String">
        <![CDATA[
        delete from cartList where cart_id in (${cart_id})
        ]]>
    </delete>

    <select id="cartListTotalCount" parameterType="com.linker.direct.common.util.Criteria" resultType="Integer">
		<![CDATA[
        SELECT	COUNT(*)
        FROM	cartList
        WHERE	1 = 1
        ]]>
	</select>


</mapper>