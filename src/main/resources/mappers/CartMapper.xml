<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.linker.direct.cart">

    <!-- 장바구니 리스트 보여주기-->
    <select id="cartList" resultType="com.linker.direct.cart.dto.CartDTO" parameterType="com.linker.direct.user.vo.UserVO">
		<![CDATA[
        SELECT c.created_at, `count`, c.item_id, user_id, name as product_name, price as produect_price
        FROM cart c
        INNER JOIN item i
        ON c.item_id = i.item_id
        WHERE user_id = #{user_id}
        ORDER BY created_at DESC;
        ]]>
	</select>

    <!-- 장바구니 리스트 추가-->
    <insert id="addCart" parameterType="com.linker.direct.cart.dto.CartDTO">
        <![CDATA[
        insert into cart (item_id, created_at, count, user_id)
        values (#{item_id}, sysdate(), 1, #{user_id})
        ]]>
    </insert>

    <!-- 장바구니 리스트 삭제-->
    <delete id="deleteCart" parameterType="com.linker.direct.cart.dto.CartDTO">
        <![CDATA[
        delete from cart where item_id = #{item_id}
        ]]>
    </delete>

    <!-- 장바구니 리스트 전체 삭제-->
    <delete id="deleteAllCart" parameterType="com.linker.direct.cart.dto.CartDTO">
        <![CDATA[
        delete from cart where user_id = #{user_id}
        ]]>
    </delete>

    <!--  구현 전  -->
    <select id="itemCount" parameterType="com.linker.direct.common.util.Criteria" resultType="Integer">
		<![CDATA[
        SELECT	COUNT(*) as item_count
        FROM	cart
        WHERE	user_id = #{user_id}
        ]]>
	</select>



</mapper>