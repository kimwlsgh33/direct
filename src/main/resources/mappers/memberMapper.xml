<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="com.linker.member">

	<resultMap id="memberResult" type="com.linker.member.vo.MemberVO">
		<result property="user_id" column="user_id"/>
		<result property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="address" column="address"/>
		<result property="pwd" column="pwd"/>
		<result property="joinDate" column="joinDate"/>
		<result property="email" column="email"/>
		<result property="phone" column="phone"/>
	</resultMap>
	
	<!-- 로그인 처리 -->
	<select id="loginByID" parameterType="com.linker.member.vo.MemberVO" resultMap="memberResult">
	
		<![CDATA[
			SELECT * 
			FROM user
			WHERE ID = #{id}
		]]>
		
	</select>
	
	<!-- 회원가입 처리 -->
	<insert id="addMember" parameterType="com.linker.member.vo.MemberVO">
		<![CDATA[
			INSERT INTO user (user_id, id, name, address, pwd, created_at, email, phone)
			SELECT IFNULL(MAX(user_id), 0) + 1, #{id}, #{name}, #{address}, #{pwd}, sysdate(), #{email}, #{phone}
			FROM user
		]]>
	</insert>
	
	<!-- 회원 전체 목록 추출하기 -->
	<select id="selectAllMemberList" resultMap="memberResult">
		<![CDATA[
			SELECT * 
			FROM user
			ORDER BY created_at DESC
		]]>
	</select>
	
	<!-- 아이디에 해당하는 회원 정보 가져오기 -->
	<select id="selectMember" parameterType="com.linker.member.vo.MemberVO" resultType="com.linker.member.vo.MemberVO">
		<![CDATA[
		SELECT user_id, id, name, zip_code, address, address_detail, pwd, created_at, email, phone
		FROM user 
		WHERE user_id = #{user_id}
		]]>
	</select>
	
	<!-- 아이디에 해당하는 회원 정보 수정하기 -->
	<update id="updateMember" parameterType="com.linker.member.vo.MemberVO">
		<![CDATA[
		UPDATE 	user
		SET		pwd=#{pwd}, name=#{name}, zip_code=#{zip_code}, email=#{email}, address=#{address}, address_detail=#{address_detail}, phone=#{phone}
		WHERE	user_id = #{user_id}
		]]>
	</update>
	
	<!-- 아이디에 해당하는 회원 정보 삭제하기 -->
	<delete id="deleteMember" parameterType="com.linker.member.vo.MemberVO">
		<![CDATA[
		DELETE	FROM user
		WHERE	user_id = #{user_id}
		]]>
	</delete>
	
	<!-- 아이디 중복 검사 : 입력한 아이디가 존재하는지 알아낸다. -->
	<select id="idCheck" parameterType="com.linker.member.vo.MemberVO" resultType="int">
	<![CDATA[
		SELECT count(*)
		FROM user
		WHERE id = #{id}
	]]>
	</select>

</mapper>