<?xml version="1.0" encoding="UTF-8"?>
<!-- xml 선언 -->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--태그 규칙 선언-->

<mapper namespace="itemOption">
    <select id="listAll" resultType="com.linker.direct.item.vo.ItemOptionVO">
        <![CDATA[
            SELECT * FROM item_option ORDER BY item_option_id
        ]]>
    </select>

    <insert id="create" parameterType="com.linker.direct.item.vo.ItemOptionVO">
        <![CDATA[
        INSERT INTO item_option (item_id, `option`, description, price)
        VALUES (#{item_id}, #{optionName}, #{optionDescription}, #{optionPrice})
        ]]>
    </insert>

    <select id="read" resultType="com.linker.direct.item.vo.ItemOptionVO">
        <![CDATA[
            SELECT * FROM item_option WHERE item_id = #{item_id}
        ]]>
    </select>
</mapper>